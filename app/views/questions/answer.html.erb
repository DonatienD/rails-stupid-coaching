<body>
  <div class="container">
    <h1 class="title">Stupid Coaching</h1>
    <div class="card">
      <h3>Your question :</h3>
      <%= params[:question]%>
    </div>

    <div class="card">
      <h3>Coach answer :</h3>
      <% if params[:question] == "I am going to work"%>
        <%= "Great!"%>
        <% elsif params[:question][-1] == "?"%>
          <%= "Silly question, get dressed and go to work!"%>
        <% else %>
          <%= "I don't care, get dressed and go to work!"%>
      <% end %>
    </div>
    <p><%= link_to "Ask a new question", ask_path %></p>
  </div>
</body>
